{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}


	{{ form_start(form, { 'attr' : { 'class': 'container mt-5 bg-secondary p-5 w-50 rounded-5 d-flex flex-column gap-3 shadow-lg' } }) }}
	{{ form_errors(form) }}

	{{ form_row(form.firstName, { 'attr' : { 'class': 'form-control mt-3' } }) }}

	{{ form_row(form.lastName, { 'attr' : { 'class': 'form-control mt-3' } }) }}

	{{ form_row(form.email, { 'attr' : { 'class': 'form-control mt-3' } }) }}

	{{ form_row(form.plainPassword, { 'attr' : { 'class': 'form-control mt-3' } }) }}



	{{ form_row(form.Submit, { 'attr' : { 'class': 'rounded-3 w-100 mt-4' } }) }}



	{{ form_end(form) }}
{% endblock %}
